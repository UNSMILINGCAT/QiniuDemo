<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="jdbc.properties"/>
    <!--类型别名-->
    <typeAliases>
        <typeAlias type="com.ycwh.demo.chapter3.Role" alias="Role"/>
        <typeAlias type="com.ycwh.demo.chapter4.Dinosaur" alias="dinosaur"/>
    </typeAliases>

    <!--类型处理-->
    <typeHandlers>
        <typeHandler handler="com.ycwh.demo.chapter4.MyTypeHandler" javaType="string" jdbcType="VARCHAR"/>
    </typeHandlers>
    <!--环境配置-->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url"
                          value="${jdbc.url}"/>
                <property name="username" value="${jdbc.dinosaurName}"/>
                <property name="password" value="${jdbc.userPassword}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="RoleMapper.xml"/>
        <mapper resource="dinosaurMapper.xml"/>
    </mappers>
</configuration>